<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ProfileBook.Views.CreateProfile"
             Title="{Binding Title}"
             Style="{StaticResource ContentPageStyle}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary"
                 Priority="0"
                 Command="{Binding Save}"
                 IconImageSource="ic_save.png"/>
    </ContentPage.ToolbarItems>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ImageButton x:Name="profileImage"
                     Source="{Binding Path=ImagePath, Mode=TwoWay}"
                     Command="{Binding ChooseImage}"
                     Grid.Row="0"
                     Grid.RowSpan="2"
                     Style="{StaticResource ImageButtonStyle}"
                     BackgroundColor="Transparent"/>
        <Entry x:Name="nicknameInput" 
                   Placeholder="Nickname"
                   Text="{Binding Path=Nickname, Mode=TwoWay}" 
                   Style="{StaticResource EntryStyle}"
                   Grid.Row="3"/>
        <Entry x:Name="nameInput" 
                   Placeholder="Name" 
                   Text="{Binding Path=Name, Mode=TwoWay}" 
                   Style="{StaticResource EntryStyle}"
                   Grid.Row="4" />
        <Editor x:Name="descriptionInput"
                    Placeholder="Description"
                    Text="{Binding Path=Description, Mode=TwoWay}"
                    Style="{StaticResource EntryStyle}"
                    MaxLength="120"
                    Grid.Row="5"
                    Grid.RowSpan="3"/>
    </Grid>
</ContentPage>