<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ProfileBook.Views.Settings"
             Title="{Binding Title}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" Grid.RowSpan="2">
            <Label Text="Sorting" FontAttributes="Bold"/>
            <StackLayout Orientation="Horizontal">
                <RadioButton x:Name="buttonName" IsChecked="{Binding Path=ButtonNameIsChecked, Mode=TwoWay}"/>
                <Label Text="Name" VerticalOptions="Center"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <RadioButton IsChecked="{Binding Path=ButtonNicknameIsChecked, Mode=TwoWay}" />
                <Label Text="Nickname" VerticalOptions="Center"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <RadioButton IsChecked="{Binding Path=ButtonDateIsChecked, Mode=TwoWay}"/>
                <Label Text="Date" VerticalOptions="Center"/>
            </StackLayout>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Grid.Row="2">
            <Label Text="Dark Theme" FontAttributes="Bold" VerticalOptions="Center"/>
            <CheckBox />
        </StackLayout>
        <Picker Grid.Row="3"/>
    </Grid>
</ContentPage>